<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.carleton.scs.disj"
   name="DisJ Simulator"
   version="1.0.0"
   provider-name="SCS Carleton University"
   class="distributed.plugin.ui.GraphEditorPlugin">

   <runtime>
      <library name="disJ.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui.views"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.ui.console"/>
      <import plugin="org.eclipse.draw2d"/>
   </requires>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            filenames=".gph"
            icon="icons/editor.gif"
            class="distributed.plugin.ui.editor.GraphEditor"
            default="true"
            name="distributed.plugin.ui.editor.GraphEditor"
            contributorClass="distributed.plugin.ui.actions.GraphEditorActionBarContributor"
            id="distributed.plugin.ui.editor.GraphEditor"/>
   </extension>

</plugin>
